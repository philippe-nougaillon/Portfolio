<% cache @client do %>
  <div id= <%= @client.id %> class="flex flex-col-reverse lg:flex-row items-center justify-between mb-12 ">
    <div class="my-6">
      <h2 class="hidden lg:block font-black text-3xl text-accent underline underline-offset-8 mb-6">
        <%= @client.name %>
      </h2>

      <p><%= simple_format(@client.description) %></p>

      <div class="my-3">
        <%= render(TagListComponent.new(tags: @client.tag_list)) %>
      </div>
    </div>
    <div class="lg:w-64">
      <%= image_tag "logos/#{@client.id}.png" %>
    </div>
  </div>
<% end %>
<% cache @client do %>
  <div id= <%= @client.id %> class="client-component flex flex-col lg:flex-row items-center justify-between lg:gap-16">
    <div class="my-6">
      <h2 class="font-bold text-3xl text-accent underline underline-offset-8 mb-6">
        <%= @client.name %>
      </h2>

      <p><%= simple_format(@client.description) %></p>

      <div class="my-3">
        <%= render(TagListComponent.new(tags: @client.tag_list)) %>
      </div>
    </div>
    <div class="w-64">
      <%= image_tag "logos/#{@client.id}.png" %>
    </div>
  </div>
<% end %>
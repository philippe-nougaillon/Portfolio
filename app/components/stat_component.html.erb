      <div class="stat-title">Déploiements Heroku</div>
      <div class="stat-value"><%= number_with_delimiter(@nbr_deploys) %></div>
      <div class="stat-desc"><%= params[:tag] ? 'n/a' : '↗︎ 512 (42%)' %></div>
    </div>

    <div class="stat">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"class="inline-block w-8 h-8 fill-current">

<div class="mx-auto max-w-max p-8 reveal">
  <div class="stats stats-vertical lg:stats-horizontal shadow">
  
    <% if @nbr_projets > 0 %>
        <div class="stat">
          <div class="stat-figure text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </div>
          <div class="stat-title">Projets</div>
          <div class="stat-value"><%= @nbr_projets %></div>
          <div class="stat-desc">~2020/2022</div>
        </div>
    <% end %>
    
    <div class="stat">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" class="inline-block w-8 h-8 fill-current">

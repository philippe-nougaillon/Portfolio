      <div class="stat-title">Tasses de café</div>
      <div class="stat-value"><%= number_with_delimiter(@nbr_coffees).to_i %></div>
      <div class="stat-desc"><%= params[:tag] ? 'n/a' : '↗︎ 154 (25%)' %></div>
    </div>

  </div>
</div>

<h1 class="font-bold text-4xl text-center text-accent mb-6 pt-8">
  <i>RECHERCHE</i>
</h1>

<h2 class="text-center">
  Entrez un terme à rechercher dans tout le site
</h2>

<div class="flex justify-center">
  <%= form_tag recherche_path, method: :get do %>
    <div class="form-control mt-6">
      <div class="input-group">
        <button class="btn">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
        </button>
        <%= text_field_tag :search, 
                            params[:search], 
                            class: "input", 
                            placeholder: "ex: Ruby, React..." %>
      </div>
    </div>
  <% end %>
</div>

<% if defined?(@results) %>
  <% if @results.any? %>
    <%= render partial: @results, as: :result %>
    <%= @results.count %>
    résultat.s

  <% else %>
    <p class="title is-4 has-text-centered p-6">
      Aucun résultat trouvé...
    </p>
  <% end %>
<% end %>
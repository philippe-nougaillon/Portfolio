
<h1 class="font-bold text-4xl text-center text-accent mb-12 pt-8">
  <i>RECHERCHE</i>
</h1>

<div class="flex justify-center mb-12">
  <%= form_tag recherche_path, method: :get do %>
    <div class="form-control mt-6">
      <label class="input-group input-group-lg">
        <button class="btn btn-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
        </button>
        <%= text_field_tag :search, 
                            params[:search], 
                            class: "input input-bordered input-lg", 
                            placeholder: "Terme à rechercher" %>
      </label>
    </div>
  <% end %>
</div>

<% if defined?(@results) %>
  <div class="mx-12">
    <% if @results.any? %>
      <%= render partial: @results, as: :result %>
      <p class="mt-4">
        <%= @results.count %>
        résultat.s
      </p>

    <% else %>
      <p class="title is-4 has-text-centered p-6">
        Aucun résultat trouvé...
      </p>
    <% end %>
  </div>
<% end %>
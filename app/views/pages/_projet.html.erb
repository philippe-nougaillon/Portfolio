<!-- The button to open modal -->
<label for="my-modal-<%= projet.id %>" class="link-primary mt-3">
  <div class="mt-3">
    <div class="card bg-base-100 shadow hover:shadow-xl duration-300">
      <figure>
        <%= image_tag projet.thumbnail_image_path %>
      </figure>
      <div class="card-body">
        <h2 class="card-title text-primary">
          <%= projet.nom.upcase %>
        </h2>
        <div class="card-actions flex justify-between">
          <div>
            <% projet.tag_list.each do |tag| %>
              <div class="badge badge-ghost"><%= tag %></div>
            <% end %>
          </div>
        </div>
        <h3 class="text-secondary">
          <%= projet.contenu.truncate(80) if projet.contenu %>
        </h3>
      </div>
    </div>
  </div>
</label>

<!-- Put this part before </body> tag -->
<input type="checkbox" id="my-modal-<%= projet.id %>" class="modal-toggle" />
<label for="my-modal-<%= projet.id %>" class="modal cursor-pointer bg-slate">
  <label class="modal-box max-w-max">
    <label for="my-modal-<%= projet.id %>" class="btn btn-primary btn-sm btn-circle absolute right-2 top-2">âœ•</label>
    <div class="mx-auto lg:w-2/3 shadow-xl p-8">
      <div class="mx-auto">
        <div id="<%= dom_id projet %>">

          <div class="shadow">
            <%= image_tag projet.thumbnail_image_path %>
          </div>
          
          <h1 class="my-6 text-4xl font-bold text-primary">
            <%= projet.nom.upcase %>
          </h1>

          <p class="my-6">
            <% projet.tag_list.each do |tag| %>
              <div class="badge badge-ghost"><%= tag %></div>
            <% end %>
          </p>

          <p class="my-6 first-line:uppercase first-line:tracking-widest first-letter:text-5xl first-letter:font-bold first-letter:text-slate-900 first-letter:mr-3 first-letter:float-left">
            <%= projet.contenu %>
          </p>

          <div class="columns-2 my-6">
            <div class="text-primary">
              <%= link_to projet.url, projet.url, target: "_blank" %>
            </div>

            <div class="w-16 md:w-24 lg:w-32 float-right">
              <%= image_tag projet.logo_image_path if File.exist?("app/assets/images/" + projet.logo_image_path) %>
            </div>
          </div>

        </div>

        <% if user_signed_in? %>
          <%= link_to 'Edit this projet', edit_projet_path(projet), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          <div class="inline-block ml-2">
            <%= button_to 'Destroy this projet', projet_path(projet), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
          </div>
          <%= link_to 'Back to projets', projets_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <% end %>
      </div>
    </div>
  </label>
</label>
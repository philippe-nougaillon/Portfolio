<%= turbo_frame_tag "main_frame" do %>
  <h1 class="font-bold text-4xl text-center text-accent mb-6 pt-8">
    <i>Blog</i>
  </h1>

  <%= turbo_frame_tag "results_frame" do %>
    <div class="mx-auto max-w-max m-16 mt-6 lg:px-24">
      <%= render TagCloudComponent.new(tags: @tags) %>
    </div>

    <%= render PostComponent.with_collection(@posts) %>
  <% end %>
<% end %>
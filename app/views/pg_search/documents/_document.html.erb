<div>
  <h3 class="title is-5">
    <% if result.searchable_type == "Post" %>
      <%= link_to truncate(result.content, length: 250), 
                  url_for(controller: result.searchable_type.pluralize.downcase, 
                  action: 'show', 
                  id: result.searchable_id) %>
    <% else %>
      <%= result.content %>
    <% end %>
  </h3>
  <p class="mt-3">
    Contenu de type 
    <%= result.searchable_type %>
    créé il y a 
    <%= time_ago_in_words(result.searchable_type.constantize.find(result.searchable_id).created_at) %>
  </p>
  <hr>
</div>
<div class="mx-auto max-w-max p-8">
  <div class="stats stats-vertical lg:stats-horizontal shadow">
  
    <div class="stat">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </div>
      <div class="stat-title">Projets</div>
      <div class="stat-value"><%= @projets.count %></div>
      <div class="stat-desc">1 juin 2021 - 31 mai 2022</div>
    </div>
    
    <div class="stat">
      <div class="stat-figure text-secondary">
        <%= image_tag "code-commit-solid.svg", width: "40px" %>
      </div>
      <div class="stat-title">Commits GitHub</div>
      <div class="stat-value"><%= number_with_delimiter(@projets_commits) %></div>
      <div class="stat-desc">↗︎ 400 (22%)</div>
    </div>
    
    <div class="stat">
      <div class="stat-figure text-secondary">
        <%= image_tag "paper-plane-solid.svg", width: "40px" %>
      </div>
      <div class="stat-title">Déploiements Heroku</div>
      <div class="stat-value"><%= number_with_delimiter(@projets_deploys) %></div>
      <div class="stat-desc">↘︎ 90 (14%)</div>
    </div>

    <div class="stat">
      <div class="stat-figure text-secondary">
        <%= image_tag "mug-hot-solid.svg", width: "40px" %>
      </div>
      <div class="stat-title">Tasses de café</div>
      <div class="stat-value"><%= number_with_delimiter((@projets_coffees).to_i) %></div>
      <div class="stat-desc">↗︎ 400 (100%)</div>
    </div>

  </div>
</div>